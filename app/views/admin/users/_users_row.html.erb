<% @users.each do |user| %>
  <tr id="user_<%= user.id %>">
    <td class="image"><img src="<%= gravatar_url(user.email) %>", height="24px" alt="" /></td>
    <td class="text"><%= user.last_name %></td>
    <td class="text"><%= user.first_name %></td>
    <td class="text"><%= user.email %></td>
    <td class="boolean"><%= user.confirmed_at ? material_icon.check : material_icon.close %></td>
    <td class="text"><%= user.display_role %></td>
    <td class="actions">
      <%= link_to material_icon.edit, edit_admin_user_path(user), class: 'btn link-edit' %>
      <%= link_to material_icon.delete, admin_user_path(user), method: :delete, data: { confirm: 'En êtes vous sûr ?', remote: true }, class: 'btn link-destroy' %>
    </td>
  </tr>
<% end %>
