<% content_for :title, 'Compétences' %>
<div class="page-title">
  <div class="title">
    <%= @teaching_cycle.teaching_name %> - <%= @teaching_cycle.cycle_name %><br>
    Compétences
  </div>
  <div class="links">
    <%= link_to material_icon.arrow_back, teacher_teacher_teaching_cycles_path %>
  </div>
</div>
<div class="row">
  <div class="column xs12 offset-l1 l10">
    <% @teaching_cycle.ability_sets.each do |ability_set| %>
      <div class="card">
        <div class="table-area">
          <div class="header">
            <%= ability_set.name %> 
          </div> 
          <div class="table">
            <table>
              <thead>
                <tr>
                  <th class="text">Item</th>
                </tr>
              </thead>
              <tbody>
                <% ability_set.ability_items.each do |ability_item| %>
                  <tr>
                    <td class="text"><%= ability_item.name %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
